<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- 테두리 스타일 설정 -->
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- 배경 색상 설정 -->
            <stroke
                android:width="1dp"
                android:color= "@android:color/black" /> <!-- 테두리 색상 설정 -->
            <corners android:radius="4dp" /> <!-- 모서리 라운딩 설정 -->
        </shape>
    </item>
</layer-list>